{
  "name": "app",
  "description": "Webcomponent lit-element following open-wc recommendations",
  "license": "MIT",
  "author": "lit-element",
  "version": "0.0.0",
  "scripts": {
    "start": "vite --port $UI_PORT --clearScreen false",
    "build": "vite build",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "package": "npm run build && cd dist && bestzip ../dist.zip *",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build"
  },
  "dependencies": {
    "@darksoil/assemble": "^0.4.1",
    "@holochain-open-dev/cancellations": "^0.3.0",
    "@holochain-open-dev/elements": "^0.8.3",
    "@holochain-open-dev/file-storage": "^0.7.0",
    "@holochain-open-dev/profiles": "^0.17.1",
    "@holochain-open-dev/stores": "^0.7.16",
    "@holochain-open-dev/utils": "^0.16.2",
    "@holochain/client": "^0.16.0",
    "@lit/context": "^1.0.0",
    "@lit-labs/observers": "^2.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@scoped-elements/event-calendar": "^0.1.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "lodash-es": "^4.17.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.7.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "14.11.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "bestzip": "^2.2.1",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.4.9",
    "vite-plugin-checker": "^0.5.3",
    "vite-plugin-static-copy": "^0.13.1"
  }
